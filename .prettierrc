{
    "trailingComma": "none",
    "bracketSpacing": true,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 4,
    "semi": true,
    "bracketSameLine": true,
    "plugins": [
        "prettier-plugin-apex",
        "@prettier/plugin-xml"
    ],
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": {
                "parser": "lwc"
            }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": {
                "parser": "html"
            }
        }
    ]
}